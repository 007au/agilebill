#!/usr/bin/python

import sys
import posix
import os

posix.system('/usr/sbin/retrieve_iax_conf_from_mysql.pl')
a = posix.system('diff -q /etc/asterisk/iax_additional.conf.tmp /etc/asterisk/iax_additional.conf >/dev/null 2>&1')
if a:
	try:
		os.unlink('/etc/asterisk/iax_additional.conf')
	except OSError:
		pass
	posix.system('mv -f /etc/asterisk/iax_additional.conf.tmp /etc/asterisk/iax_additional.conf')
	posix.system('asterisk -rx "reload chan_iax2.so" >/dev/null 2>&1')
	posix.system('asterisk -rx "reload app_voicemail.so" >/dev/null 2>&1')

